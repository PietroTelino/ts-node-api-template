{
  "compilerOptions": {
    // ONDE ESTÁ O CÓDIGO TS E ONDE VAI O JS GERADO
    "rootDir": "./src",
    "outDir": "./dist",

    // AMBIENTE NODE
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "types": ["node"],
    "esModuleInterop": true,
    "moduleResolution": "node",

    // MAPAS / DECLARAÇÃO (opcional, mas útil)
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // CHECAGEM MAIS RÍGIDA
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}